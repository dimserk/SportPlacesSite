@model SportPlaces.Models.Photo

@{
    ViewData["Title"] = "Edit";
}

<h2>Изменение</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="SportObjectId" class="control-label"></label>
                <select asp-for="SportObjectId" class="form-control" asp-items="ViewBag.SportObjectId"></select>
                <span asp-validation-for="SportObjectId" class="text-danger"></span>
            </div>
            <div>
                <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" />
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" id="files" asp-for="Image" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Обратно к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
