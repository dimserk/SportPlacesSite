@model SportPlaces.Models.Photo

@{
    ViewData["Title"] = "Delete";
}

<h2>Удаление</h2>

<h3>Вы действительно хотите удалить эту картинку?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SportObject)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SportObject.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd>
            <img style="height: 200px; width: 300px" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        <a asp-action="Index">Обратно к списку</a>
    </form>
</div>
