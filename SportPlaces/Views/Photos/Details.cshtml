@model SportPlaces.Models.Photo

@{
    ViewData["Title"] = "Details";
}

<h2>Подробнее</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SportObject)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SportObject.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd>
            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Изменить</a> |
    <a asp-action="Index">Обратно к списку</a>
</div>
