@model SportPlaces.Models.Record

@{
    ViewData["Title"] = "Delete";
}

<h2>Удаление</h2>

<h3>Вы действительно хотите удалить данную запись?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Login)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SportObject)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SportObject.Name)
        </dd>
        <dt>
            Дата записи
        </dt>
        <dd>
            @ViewBag.Date
        </dd>
        <dt>
            Время записи
        </dt>
        <dd>
            @ViewBag.Time
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Length)
        </dt>
        <dd>
            @switch (Model.Length)
            {
                case 0.5:
                    @:Тридцать минут
                    break;
                case 1:
                    @:Один час
                    break;
                case 1.5:
                    @:Полтора часа
                    break;
                case 2:
                    @:Два часа
                    break;
                case 2.5:
                    @:Два с половиной часа
                    break;
                case 3:
                    @:Три часа
                    break;
                case 4.5:
                    @:Четыре с половиной часа
                    break;
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        <a asp-action="Index">Обратно к списку</a>
    </form>
</div>
